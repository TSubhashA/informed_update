<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.evaluatescreens.evaluation.fragment.evaluatewelcome.EvaluateWelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_layout"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="1."
            android:layout_marginTop="@dimen/margin_default_low"
            android:layout_marginStart="@dimen/margin_default_low"
            android:layout_marginBottom="@dimen/margin_default_low"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_head_medium"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"

        android:layout_margin="@dimen/margin_default_low"
        android:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do met sint ?"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_head_medium"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_details"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_default_size"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_default_size"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_size"
                android:layout_marginEnd="@dimen/margin_default_size"
                android:layout_weight="0.7"
                android:background="@drawable/box_border_stroke_purple_dark"
                android:orientation="horizontal"

                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_default_size"
                    android:layout_marginEnd="@dimen/margin_default_size"
                    android:background="@drawable/box_border_stroke_purple_dark"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"

                    android:paddingBottom="2dp"
                    android:text="A"
                    android:textColor="@color/purple"
                    />

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:fontFamily="@font/poppins_bold"

                    android:text="Option 1"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_high" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_default_size"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_size"
                android:layout_marginEnd="@dimen/margin_default_size"
                android:layout_weight="0.7"
                android:background="@drawable/box_border_stroke_purle_light"
                android:orientation="horizontal"

                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_default_size"
                    android:layout_marginEnd="@dimen/margin_default_size"
                    android:background="@drawable/box_border_stroke_purle_light"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"

                    android:paddingBottom="2dp"


                    android:text="B"
                    android:textColor="@color/purple"
                    />

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:fontFamily="@font/poppins_bold"

                    android:text="Option 2"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_high" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_default_size"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_size"
                android:layout_marginEnd="@dimen/margin_default_size"
                android:layout_weight="0.7"
                android:background="@drawable/box_border_stroke_purle_light"
                android:orientation="horizontal"

                android:paddingTop="6dp"
                android:paddingBottom="6dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_default_size"
                    android:layout_marginEnd="@dimen/margin_default_size"
                    android:background="@drawable/box_border_stroke_purle_light"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"

                    android:paddingBottom="4dp"


                    android:text="C"
                    android:textColor="@color/purple"
                    />

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:fontFamily="@font/poppins_bold"

                    android:text="Option 3"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_high" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_default_size"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_size"
                android:layout_marginEnd="@dimen/margin_default_size"
                android:layout_weight="0.7"
                android:background="@drawable/box_border_stroke_purle_light"
                android:orientation="horizontal"

                android:paddingTop="6dp"
                android:paddingBottom="6dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_default_size"
                    android:layout_marginEnd="@dimen/margin_default_size"
                    android:background="@drawable/box_border_stroke_purle_light"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"

                    android:paddingBottom="2dp"


                    android:text="D"
                    android:textColor="@color/purple"
                    />
                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:fontFamily="@font/poppins_bold"

                    android:text="Option 4"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_high" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>


<LinearLayout
android:id="@+id/btn_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_marginStart="@dimen/margin_default_low"
android:layout_marginTop="6dp"
android:layout_marginEnd="@dimen/margin_default_low"
android:orientation="horizontal"
android:paddingTop="@dimen/padding_default_low">

<com.google.android.material.button.MaterialButton

    android:id="@+id/btn_back"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default_low"
    android:layout_weight="1"
    android:padding="@dimen/padding_default_low"
    android:text="Back"
    android:textSize="@dimen/text_size_medium"
    app:backgroundTint="@color/white"
    app:cornerRadius="@dimen/radius_medium"
    app:strokeColor="@color/purple"
    app:strokeWidth="2dp"
    app:textAllCaps="false" />

<com.google.android.material.button.MaterialButton

    android:id="@+id/btn_next"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default_size"
    android:layout_weight="1"
    android:padding="@dimen/padding_default_low"
    android:text="Next"
    android:textSize="@dimen/text_size_medium"
    app:backgroundTint="@color/purple"
    app:cornerRadius="@dimen/radius_medium"
    app:textAllCaps="false" />


</LinearLayout>
</RelativeLayout>