<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.landingscreen.traineeview.fragment.download.view.TraineeDownloadFragment">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/app_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:layout_margin="@dimen/margin_default_size"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"
            android:layout_marginTop="@dimen/margin_default_size"
            android:layout_marginEnd="@dimen/margin_default_size"
            android:text="Select parameters"
            android:textSize="@dimen/text_size_head"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/margin_medium"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"
            android:layout_marginTop="@dimen/margin_default_size"
            android:layout_marginEnd="@dimen/margin_default_size"
            android:text="Select Evaluation or Evaluation Type"
            android:layout_marginBottom="4dp"

            />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serch_edit_text_evaluation"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"

            android:layout_marginEnd="@dimen/margin_default_size"
            android:layout_marginBottom="@dimen/margin_default_size"
            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_high"
            app:boxCornerRadiusBottomStart="@dimen/corner_radius_high"
            app:boxCornerRadiusTopEnd="@dimen/corner_radius_high"
            app:boxCornerRadiusTopStart="@dimen/corner_radius_high"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeWidth="2dp"
            app:hintEnabled="false"
            app:layout_anchorGravity="bottom|center"

            app:startIconDrawable="@drawable/ic_search_vector_purple"

            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="All Evaluation"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/padding_low"
                android:textSize="@dimen/text_size_head_small" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"
            android:layout_marginTop="@dimen/margin_default_size"
            android:layout_marginEnd="@dimen/margin_default_size"
            android:text="Select Evaluator"
            android:layout_marginBottom="4dp"


            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serch_edit_text_all_evaluator"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"

            android:layout_marginEnd="@dimen/margin_default_size"
            android:layout_marginBottom="@dimen/margin_default_size"
            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_high"
            app:boxCornerRadiusBottomStart="@dimen/corner_radius_high"
            app:boxCornerRadiusTopEnd="@dimen/corner_radius_high"
            app:boxCornerRadiusTopStart="@dimen/corner_radius_high"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeWidth="2dp"

            app:hintEnabled="false"
            app:layout_anchorGravity="bottom|center"

            app:startIconDrawable="@drawable/ic_search_vector_purple"

            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="All Evaluators"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/padding_low"
                android:textSize="@dimen/text_size_head_small" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"
            android:layout_marginTop="@dimen/margin_default_size"
            android:layout_marginEnd="@dimen/margin_default_size"
            android:layout_marginBottom="4dp"

            android:text="Select Date Range"


            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serch_edit_text_date"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"

            android:layout_marginEnd="@dimen/margin_default_size"
            android:layout_marginBottom="@dimen/margin_default_size"
            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_high"
            app:boxCornerRadiusBottomStart="@dimen/corner_radius_high"
            app:boxCornerRadiusTopEnd="@dimen/corner_radius_high"
            app:boxCornerRadiusTopStart="@dimen/corner_radius_high"
            app:boxStrokeColor="@color/purple"
            app:boxStrokeWidth="2dp"
            app:hintEnabled="false"
            app:layout_anchorGravity="bottom|center"
            app:startIconDrawable="@drawable/ic_fi_calendar"

            app:startIconTint="@color/purple">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="All Evaluators"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/padding_low"
                android:textSize="@dimen/text_size_head_small" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_size"
            android:fontFamily="@font/poppins_semibold"
            android:text="32 Evaluation Found"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_medium"

            />




    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_download_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_size"
        android:text="Send Evaluation Data to my Email"
        app:backgroundTint="@color/purple"
        app:cornerRadius="8dp"
        android:layout_alignParentBottom="true"

        android:padding="@dimen/padding_default_low"
        android:textSize="@dimen/text_size_low_high"
        app:textAllCaps="false" />

</RelativeLayout>