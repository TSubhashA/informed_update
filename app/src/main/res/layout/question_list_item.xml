<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="@dimen/margin_default_size"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_high"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/mini_chart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default_size"

                android:text="Question 1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_high"
                android:textStyle="bold" />

            <com.majorik.sparklinelibrary.SparkLineLayout
                android:id="@+id/chart_list"
                android:layout_width="60dp"
                android:layout_height="20dp"
                app:s_line_color="@color/purple"
                app:s_line_thickness="3dp"
                android:layout_margin="@dimen/margin_default_size"
                app:s_line_bezier="0.5"
                />

            <TextView
                android:id="@+id/text_point"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default_size"
                android:text="4.8/5"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_high"
                android:textStyle="bold" />


        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>