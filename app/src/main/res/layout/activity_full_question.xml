<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fullquestion.view.FullQuestionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@color/grey0">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/my_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


            <TextView
                android:id="@+id/action_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Cateract Surgery"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_head_medium" />


        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_layout"
        android:orientation="vertical">


        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_size"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingStart="@dimen/padding_default_low"
            android:paddingBottom="4dp"
            android:text="Global Assesment"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_head"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"
            android:layout_marginEnd="@dimen/margin_default_size"
            android:paddingStart="@dimen/padding_default_low"
            android:paddingEnd="@dimen/padding_default_low"
            android:text="Resident has appropriate surgical plan based on awareness of patient specific factors (e.g. biometry, pupil size,traum,uveitis)"
            android:textColor="@color/grey2"
            android:textSize="@dimen/text_size_medium" />
        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default_low"
            android:clickable="true"
            android:layout_marginStart="@dimen/margin_default_size"
            android:text="Hide Question"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_head_small" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_size"

            android:paddingStart="@dimen/padding_default_low"
            android:paddingEnd="@dimen/padding_default_low"
            android:text="Data from 120 Evaluations in 6 months"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view"
            android:layout_margin="@dimen/margin_default_size"
            android:padding="@dimen/padding_default_low"

            />


    </LinearLayout>


</RelativeLayout>