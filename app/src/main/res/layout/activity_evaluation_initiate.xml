<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.evaluatescreens.evaluation.fragment.evaluatewelcome.EvaluateWelcomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/elevation_high"
        android:paddingStart="0dp"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/my_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Evaluate Annet"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    />
                <ImageButton
                    android:id="@+id/action_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:src="@drawable/ic_fi_x_circle"

                    />

            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_layout"
        android:layout_below="@id/app_bar_layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/main_title"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Cataract Surgery"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_low_high" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:id="@+id/image_view"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/cataract" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/description"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet."
            android:textColor="@color/black2"
            android:textSize="@dimen/text_size_head_small" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_default_low"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/margin_default_low"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_default_low">

        <com.google.android.material.button.MaterialButton

            android:id="@+id/btn_back"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_low"
            android:layout_weight="1"
            android:padding="@dimen/padding_default_low"
            android:text="Back"
            android:textSize="@dimen/text_size_medium"
            app:backgroundTint="@color/white"
            app:cornerRadius="@dimen/radius_medium"
            app:strokeColor="@color/purple"
            app:strokeWidth="2dp"
            app:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton

            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_size"
            android:layout_weight="1"
            android:padding="@dimen/padding_default_low"
            android:text="Start"
            android:textSize="@dimen/text_size_medium"
            app:backgroundTint="@color/purple"
            app:cornerRadius="@dimen/radius_medium"
            app:textAllCaps="false" />


    </LinearLayout>

</RelativeLayout>