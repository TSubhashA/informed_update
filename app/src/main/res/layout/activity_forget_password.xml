<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".presentation.forgetpassword.view.ForgetPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="inforMed"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_head_title"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_bold"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:textAllCaps="false" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_size"
            android:layout_marginTop="@dimen/margin_high"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="Forgot your password ?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_head_title"
            android:layout_gravity="center"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_semibold"
            app:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/forget_email"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_email"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default_size"
                android:hint="Please enter your registered Email"
                android:textColor="@color/black"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="@dimen/margin_default_size"
                    android:paddingTop="@dimen/padding_high"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default_size"
                android:text="Continue"
                app:cornerRadius="@dimen/radius_low"
                android:padding="@dimen/padding_default_low"
                android:textSize="@dimen/text_size_low_high"
                app:textAllCaps="false" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/forget_done"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/email_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_size"
                android:layout_marginTop="@dimen/margin_default_size"
                android:layout_marginEnd="@dimen/margin_default_size"

                android:layout_marginBottom="@dimen/margin_medium"
                android:text="We have sent you an email to email@domain.com
with a reset password link"

                android:gravity="center"

                app:fontFamily="@font/poppins_semibold"
                app:textAllCaps="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_size"
                android:layout_marginEnd="@dimen/margin_default_size"

                android:layout_marginBottom="40dp"
                android:text="Please click on the link and set your password."

                android:gravity="center"

                app:fontFamily="@font/poppins_semibold"
                app:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gotit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default_size"
                android:text="Got It"
                app:cornerRadius="@dimen/radius_low"

                app:textAllCaps="false" />


        </LinearLayout>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>